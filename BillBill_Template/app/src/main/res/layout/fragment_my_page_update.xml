<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mp_ud_text"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="14dp"
        android:text="프로필 수정"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mp_cl_text"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="완료"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mp_ud_text"
        app:layout_constraintBottom_toBottomOf="@id/mp_ud_text"/>

    <ImageView
        android:id="@+id/mp_user_ud_iv"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/img_test_home_user"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/mp_ud_text"
        app:layout_constraintStart_toStartOf="@+id/mp_ud_text"
        app:layout_constraintEnd_toEndOf="@+id/mp_ud_text"/>

    <TextView
        android:id="@+id/mp_user_ud_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="사진 수정"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/mp_user_ud_iv"
        app:layout_constraintStart_toStartOf="@+id/mp_user_ud_iv"
        app:layout_constraintEnd_toEndOf="@+id/mp_user_ud_iv"/>

    <TextView
        android:id="@+id/mp_ud_text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:layout_marginTop="83dp"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/mp_user_ud_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/mp_ud_input_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="닉네임 입력해주세요"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/mp_ud_text_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/mp_ud_text_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/mp_ud_input_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/mp_ud_input_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/mp_ud_text_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/mp_ud_text_tp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="전화번호"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/mp_ud_input_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/mp_ud_input_tp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="전화번호를 입력해주세요"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/mp_ud_text_tp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/logout_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/mp_ud_input_tp"
        app:layout_constraintStart_toStartOf="@+id/mp_ud_input_tp"
        app:layout_constraintEnd_toEndOf="@+id/mp_ud_input_tp"/>


</androidx.constraintlayout.widget.ConstraintLayout>