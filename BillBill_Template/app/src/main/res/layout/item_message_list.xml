<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground">
    
    <ImageView
        android:id="@+id/message_list_user_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_test_home_user"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:id="@+id/message_list_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="사용자명"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/message_list_user_iv"/>

    <TextView
        android:id="@+id/message_list_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="최근 대화"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/message_list_user_iv"/>

    <TextView
        android:id="@+id/message_list_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="0분 전"
        android:textSize="11dp"
        android:textColor="@color/black"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>